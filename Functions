>>> int_items = [123, 13.23, 3213, 323.23, 9942]
>>> int_items
[123, 13.23, 3213, 323.23, 9942]
>>> int_items.sort()
>>> int_items
[13.23, 123, 323.23, 3213, 9942]
>>> int_items.sort(reverse=True)
>>> int_items
[9942, 3213, 323.23, 123, 13.23]
>>> new_items = sorted(int_items, reverse=True)
>>> new_items
[9942, 3213, 323.23, 123, 13.23]
>>> int_items
[9942, 3213, 323.23, 123, 13.23]
>>> new_items = sorted(int_items, reverse=False
... )
>>> new_items
[13.23, 123, 323.23, 3213, 9942]
>>> int_items
[9942, 3213, 323.23, 123, 13.23]
>>> sum(int_items)
13614.46
>>> total = sum(int_items)
>>> total
13614.46
>>> average = total/len(int_items)
>>> average
2722.892
