>>> str_items = ["Abc", "JM", "ED", "AD", "aaa", "bb"]
>>> str_items
['Abc', 'JM', 'ED', 'AD', 'aaa', 'bb']
>>> str_items.sort()
>>> str_items
['AD', 'Abc', 'ED', 'JM', 'aaa', 'bb']
>>> str_items.sort(key=str.lower)
>>> str_items
['aaa', 'Abc', 'AD', 'bb', 'ED', 'JM']
>>> str_items.sort(key=str.lower, reverse=True)
>>> str_items
['JM', 'ED', 'bb', 'AD', 'Abc', 'aaa']
>>> new_items = sorted(str_items)
>>> new_items
['AD', 'Abc', 'ED', 'JM', 'aaa', 'bb']
>>> new_items = sorted(str_items, key=str.lower, reverse=True)
>>> new_items
['JM', 'ED', 'bb', 'AD', 'Abc', 'aaa']
>>>
